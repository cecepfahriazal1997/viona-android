<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/madani_medium"
                android:paddingVertical="14dp"
                app:fb_defaultColor="@color/colorPrimary"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_radiusBottomLeft="16dp"
                app:fb_radiusTopLeft="16dp"
                app:fb_text="Page Information"
                app:fb_textColor="@color/white"
                app:fb_textSize="14dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/deals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/madani_medium"
                android:paddingVertical="14dp"
                app:fb_defaultColor="@color/grayLvlThree"
                app:fb_focusColor="@color/grayLvlSeven"
                app:fb_radiusBottomRight="16dp"
                app:fb_radiusTopRight="16dp"
                app:fb_text="Deal Manager"
                app:fb_textColor="@color/black"
                app:fb_textSize="14dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>