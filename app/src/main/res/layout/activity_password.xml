<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/security" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/madani_bold"
            android:text="Your Account Security"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/madani_light"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="Hi, your password has not been changed yet. Please change the password to increase account security."
            android:textColor="@color/grayLvlEight"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grayLvlSix">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/form_control"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="16dp"
                android:drawableTint="@color/grayLvlNine"
                android:fontFamily="@font/madani_medium"
                android:hint="Enter password ..."
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grayLvlSix">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/form_control"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="16dp"
                android:drawableTint="@color/grayLvlNine"
                android:fontFamily="@font/madani_medium"
                android:hint="Confirm password ..."
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/madani_medium"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingRight="32dp"
            android:paddingBottom="12dp"
            app:fb_defaultColor="@color/colorPrimary"
            app:fb_focusColor="@color/colorPrimaryDark"
            app:fb_radius="8dp"
            app:fb_text="Save"
            app:fb_textColor="@color/white"
            app:fb_textSize="16dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/madani_medium"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingRight="32dp"
            android:paddingBottom="12dp"
            app:fb_defaultColor="@color/grayLvlSix"
            app:fb_focusColor="@color/grayLvlEight"
            app:fb_radius="8dp"
            app:fb_text="Next Time"
            app:fb_textColor="@color/grayLvlNine"
            app:fb_textSize="16dp" />

    </LinearLayout>

</ScrollView>