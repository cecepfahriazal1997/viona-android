<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/back"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            app:fb_defaultColor="@color/grayLvlSeven"
            app:fb_focusColor="@color/grayLvlNine"
            app:fb_fontIconResource="&#xf060;"
            app:fb_radius="8dp"
            app:fb_text=""
            app:fb_textColor="@color/white"
            app:fb_textSize="16dp" />

        <include
            android:id="@+id/content_search"
            layout="@layout/toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_toLeftOf="@+id/filter"
            android:layout_toRightOf="@+id/back" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/filter"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_alignParentRight="true"
            app:fb_defaultColor="@color/graySmooth"
            app:fb_focusColor="@color/colorPrimaryDark"
            app:fb_fontIconResource="&#xf0b0;"
            app:fb_radius="8dp"
            app:fb_text=""
            app:fb_textColor="@color/grayLvlSeven" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/label_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_medium"
                    android:text="Pages related to "
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_bold"
                    android:text="Promo KFC"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/badge_light"
                android:fontFamily="@font/madani_bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="More Pages"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_round_soft"
            android:padding="16dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:riv_border_color="#333333"
                app:riv_border_width="0dp"
                app:riv_corner_radius="8dp"
                app:riv_mutate_background="false"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/name_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="@font/madani_bold"
                android:text="KFC Official"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/follower_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_shop"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="@font/madani_light"
                android:text="132 Followers"
                android:textColor="@color/grayLvlEight"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp" />
</LinearLayout>